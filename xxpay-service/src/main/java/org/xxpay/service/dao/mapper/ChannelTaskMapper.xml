<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.xxpay.service.dao.mapper.ChannelTaskMapper" >
    <resultMap id="BaseResultMap" type="org.xxpay.core.entity.ChannelTask" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="MchId" property="mchId" jdbcType="BIGINT" />
        <result column="ChannelMchId" property="channelMchId" jdbcType="VARCHAR" />
        <result column="ChannelType" property="channelType" jdbcType="VARCHAR" />
        <result column="Param" property="param" jdbcType="VARCHAR" />
        <result column="AreaCode" property="areaCode" jdbcType="INTEGER" />
        <result column="Status" property="status" jdbcType="TINYINT" />
        <result column="Remark" property="remark" jdbcType="VARCHAR" />
        <result column="CreateTime" property="createTime" jdbcType="TIMESTAMP" />
        <result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List" >
        Id, MchId, ChannelMchId, ChannelType, Param, AreaCode, Status, Remark, CreateTime, updateTime
    </sql>

    <select id="selectChannelTaskByStatus" resultMap="BaseResultMap" parameterType="java.lang.Byte" >
        select
        <include refid="Base_Column_List" />
        from t_channel_task
        where Status = #{status, jdbcType=TINYINT}
    </select>


</mapper>